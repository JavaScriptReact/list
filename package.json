{
  "name": "simple-todo",
  "version": "1.0.0",
  "description": "TO-DO list created with MERN",
  "main": "server.js",
  "scripts": {
    "install-client": "cd client && npm run build",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\"  \"npm run client\"",
    "heroku-postbuild": "npm run install-client && npm run build"
  },
  "author": "Lukas the Coder",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^6.1.0",
    "express": "^4.17.1",
    "mongoose": "^5.12.9",
    "npm": "^7.13.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.7"
  }
}
